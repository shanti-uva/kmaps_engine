<%  children = expanded.current_children(current_perspective, current_view)
    if children.empty? %>
      <span class="node-empty"></span>
<%  else %>
<%= link_to '', contracted_feature_path(expanded.id), :remote => true, :class => 'node-minus' %>
<%  end %>
<%= render :partial => 'features/selectable_node', :locals => { :node => expanded } %>
<%= render :partial => 'features/node_tree', :locals => { :children => children } %>