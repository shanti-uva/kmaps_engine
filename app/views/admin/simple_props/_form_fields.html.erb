<%= tinymce_assets %>
<%= tinymce %>
<%= error_messages_for model_name %>
<fieldset>
  <legend>
<%= object.class.model_name.human.titleize.s %>
  </legend>
  <div class="row">
<%= f.label(:name).s %>
<%= f.text_field :name, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.label(:code).s %>
<%= f.text_field :code, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.label(:description).s %>
  </div>
  <div class="row">
<%= f.text_area :description, rows: 4, class: 'tinymce' %>
  </div>
</fieldset>