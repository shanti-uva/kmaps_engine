<% if parent_object
  add_breadcrumb_item feature_link(parent_object)
  add_breadcrumb_item feature_names_link(parent_object)
  add_breadcrumb_item ts('new.this')
end %>
<div><h1><%= ts :for, what: t('creat.ing', what: t('new.record', what: FeatureName.model_name.human.titleize)), whom: "#{Feature.model_name.human.titleize} #{parent_object}" %></h1></div>
<br class="clear"/>
<%= form_with(model: [:admin, parent_object, object], local: true) do |f| %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= FeatureName.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
<%=  render partial: 'form_fields', locals: {f: f, object: object} %>
<%   # Make the cancel link go back to the selected feature's names if it exists %>
<%=  link_to ts('cancel.this'), parent_object ? admin_feature_path(parent_object.fid, section: 'names') : admin_feature_names_path, class: 'btn btn-primary form-submit', id: 'edit-cancel' %> |
<%=  globalized_submit_tag 'creat.e.this', class: 'submit btn btn-primary form-submit' %>
<% end %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
